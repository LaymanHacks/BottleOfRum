<div class="container body-content">
    <br />
    <h2>Treasure Calculator</h2>
    <h3>
        Given X number of pirates, what is the smallest number of <br />
        coins that could have been in the treasure chest originally?
    </h3><br />
    <div ng-controller="treasureCalculatorIndexCtrl as vm">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="txtPirateCount" class="col-sm-2 control-label">Pirate Count:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="txtPirateCount" ng-model="vm.numberOfPirates" placeholder="Pirate Count">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button ng-click="vm.calcTreasure(vm.numberOfPirates)" ng-disabled="vm.numberOfPirates > 1 ? false : true" class="btn btn-default">Calculate</button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-10" style="font-size: 18px; ">
                    <div ng-hide="vm.treasureCount > 0 ? false : true"> Coin count: <span ng-bind="vm.treasureCount"></span></div>
                </div>
            </div>

        </form>
       
    </div>
</div>

@section Scripts {
    <script src="~/app/services/treasureDataService.js"></script>
    <script src="~/app/treasureCalculator/index.js"></script>
    <script type='text/javascript'>
  $('#ajaxLoader').hide();
    </script>
}